<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Destination</h6>
            <h1 class="mb-5">Hotels</h1>
        </div>
        <div class="row g-5">
            @foreach (var hotel in Model)
            {
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">
                    <div class="position-relative h-100">
                        <img class="img-fluid position-absolute w-100 h-100" src="@Url.Content(hotel.ImageUrl)" alt="" style="object-fit: cover;">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                    <h1 class="mb-4"><span class="text-primary">@hotel.Title </span></h1>
                    <p class="mb-4">@hotel.Description</p>

                    <!-- Display average rating as stars -->
                    <div class="mb-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Round(hotel.AverageRating))
                            {
                                <small class="fa fa-star text-primary"></small>
                            }
                            else
                            {
                                <small class="fa fa-star text-secondary"></small> <!-- Empty star -->
                            }
                        }
                        <!--<span>(@hotel.AverageRating.ToString("0.0"))</span>--> <!-- Display numeric rating -->
                    </div>

                    <a class="btn btn-primary py-3 px-5 mt-2" href="@Url.Action("ViewHotel", "Hotel", new { id = hotel.Id })">Read More</a>
                </div>
            }
        </div>
    </div>
</div>
