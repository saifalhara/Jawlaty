@model Jawlaty.Models.Announcement

@{
    ViewData["Title"] = "Create Announcement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
    <h2>Create New Announcement</h2>
    <form asp-action="CreateAnnouncement" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" required />
        </div>
        <div class="form-group mt-3">
            <label for="ShortDescription">Short Description</label>
            <input type="text" class="form-control" id="ShortDescription" name="ShortDescription" required />
        </div>
        <div class="form-group mt-3">
            <label for="LongDescription">Long Description</label>
            <textarea class="form-control" id="LongDescription" name="LongDescription" rows="5" required></textarea>
        </div>
        <div class="form-group mt-3">
            <label for="Image">Image</label>
            <input type="file" class="form-control" id="Image" name="ImageFile" />
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Create Announcement</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}