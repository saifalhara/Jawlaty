@model Jawlaty.Models.Announcement

@{
    ViewData["Title"] = "Announcement Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
    <h2>@Model.Title</h2>
    <div class="mt-4">
        @if (Model.ImageUrl != null)
        {
            <img src="@Model.ImageUrl" alt="Announcement Image" style="max-width: 400px;" />
        }
        <p class="mt-3"><strong>Short Description:</strong> @Model.ShortDescription</p>
        <p class="mt-3"><strong>Long Description:</strong> @Model.LongDescription</p>
    </div>
    <div class="mt-4">
     
        <button onclick="window.history.back();" class="btn btn-secondary">Back</button>
    </div>

  </div>