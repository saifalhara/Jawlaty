@model Jawlaty.Models.Restaurant

@{
    ViewData["Title"] = "Create Restaurant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4 p-4 shadow-sm rounded ">
    <h2 class="mb-4 text-center">Create New Restaurant</h2>
    <form asp-action="CreateRestaurant" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="Title" class="form-label">Restaurant Title</label>
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter the restaurant title" required />
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="TimeInput" class="form-label">Opening Time</label>
                <input asp-for="TimeInput" class="form-control" type="datetime-local" />
            </div>
            <div class="col-md-6">
                <label asp-for="Timeout" class="form-label">Closing Time</label>
                <input asp-for="Timeout" class="form-control" type="datetime-local" />
            </div>
        </div>

        <div class="form-group mb-3">
            <label for="LongDescription" class="form-label">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="5" placeholder="Enter the restaurant description" required></textarea>
        </div>

        <div class="form-group mb-3">
            <h5 class="mb-3">Cuisine Types</h5>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="Italian" class="form-check-input" type="checkbox" />
                        <label asp-for="Italian" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Chinese" class="form-check-input" type="checkbox" />
                        <label asp-for="Chinese" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Indian" class="form-check-input" type="checkbox" />
                        <label asp-for="Indian" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="Middle" class="form-check-input" type="checkbox" />
                        <label asp-for="Middle" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="MiAmeicanddle" class="form-check-input" type="checkbox" />
                        <label asp-for="MiAmeicanddle" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Mexican" class="form-check-input" type="checkbox" />
                        <label asp-for="Mexican" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="Vegetarian" class="form-check-input" type="checkbox" />
                        <label asp-for="Vegetarian" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Glutenfree" class="form-check-input" type="checkbox" />
                        <label asp-for="Glutenfree" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label for="Image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" id="Image" name="ImageFile" />
        </div>

        <div class="form-group d-flex justify-content-between">
            <button type="submit" class="btn btn-primary px-4">Create Restaurant</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
