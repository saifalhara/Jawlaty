@model Jawlaty.Models.Hotel

@{
    ViewData["Title"] = "Create Hotel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4 p-4 shadow-sm rounded ">
    <h2 class="mb-4 text-center">Create New Hotel</h2>
    <form asp-action="CreateHotel" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="Title" class="form-label">Hotel Title</label>
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter the hotel title" required />
        </div>

        <div class="form-group mb-3">
            <label for="LongDescription" class="form-label">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="5" placeholder="Enter the hotel description" required></textarea>
        </div>

        <div class="form-group mb-3">
            <h5 class="mb-3">Hotel Amenities</h5>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="HASWIFI" class="form-check-input" type="checkbox" />
                        <label asp-for="HASWIFI" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="HASPOOL" class="form-check-input" type="checkbox" />
                        <label asp-for="HASPOOL" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="HasGym" class="form-check-input" type="checkbox" />
                        <label asp-for="HasGym" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="HasSpa" class="form-check-input" type="checkbox" />
                        <label asp-for="HasSpa" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="HasRestaurant" class="form-check-input" type="checkbox" />
                        <label asp-for="HasRestaurant" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Parking" class="form-check-input" type="checkbox" />
                        <label asp-for="Parking" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <h5 class="mb-3">Interests</h5>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="Food" class="form-check-input" type="checkbox" />
                        <label asp-for="Food" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Art" class="form-check-input" type="checkbox" />
                        <label asp-for="Art" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="History" class="form-check-input" type="checkbox" />
                        <label asp-for="History" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Sports" class="form-check-input" type="checkbox" />
                        <label asp-for="Sports" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="Shopping" class="form-check-input" type="checkbox" />
                        <label asp-for="Shopping" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Image Upload -->
        <div class="form-group mb-3">
            <label for="Image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" id="Image" name="ImageFile" />
        </div>

        <div class="form-group d-flex justify-content-between">
            <button type="submit" class="btn btn-primary px-4">Create Hotel</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
