@model Jawlaty.Models.Entertainment

@{
    ViewData["Title"] = "Create Entertainment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4 p-4 shadow-sm rounded ">
    <h2 class="mb-4 text-center">Create New Entertainment</h2>
    <form asp-action="CreateEntertainment" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="Title" class="form-label">Entertainment Title</label>
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter the entertainment title" required />
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="5" placeholder="Provide a brief description" required></textarea>
        </div>

        <div class="form-group mb-3">
            <h5 class="mb-3">Features</h5>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="HasLiveMusic" class="form-check-input" type="checkbox" />
                        <label asp-for="HasLiveMusic" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="HasTheater" class="form-check-input" type="checkbox" />
                        <label asp-for="HasTheater" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="HasSport" class="form-check-input" type="checkbox" />
                        <label asp-for="HasSport" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="HasCinema" class="form-check-input" type="checkbox" />
                        <label asp-for="HasCinema" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-check">
                        <input asp-for="HasShopping" class="form-check-input" type="checkbox" />
                        <label asp-for="HasShopping" class="form-check-label"></label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Spa" class="form-check-input" type="checkbox" />
                        <label asp-for="Spa" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CheakAge" class="form-label">Age Restriction</label>
            <select class="form-select" asp-for="CheakAge" asp-items="Html.GetEnumSelectList<CheakAge>()">
                <option value="">Select age restriction</option>
            </select>
            <span asp-validation-for="CheakAge" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" id="Image" name="ImageFile" />
        </div>

        <div class="form-group d-flex justify-content-between">
            <button type="submit" class="btn btn-primary px-4">Create Entertainment</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
