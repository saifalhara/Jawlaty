@model Jawlaty.Models.Transportation

@{
    ViewData["Title"] = "Create Transportation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
    <h2>Create New Transportation Article</h2>
    <form asp-action="CreateTransportation" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="CityId">City</label>
            <select class="form-control" id="CityId" name="CityId" required>
                <option value="">Select a city</option>
                @foreach (var city in ViewBag.Cities) // Assuming you pass a list of cities via ViewBag
                {
                    <option value="@city.Id">@city.Name</option>
                }
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="Title">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" required>
        </div>

        <div class="form-group mt-3">
            <label for="Content">Content</label>
            <textarea class="form-control" id="Content" name="Content" rows="5" required></textarea>
        </div>

        @*<div class="form-group mt-3">
            <label for="Image">Image</label>
            <input type="file" class="form-control" id="Image" name="ImageFile" />
        </div>*@

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Create Transportation Article</button>
            <a asp-controller="Admin" asp-action="Transportations" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
