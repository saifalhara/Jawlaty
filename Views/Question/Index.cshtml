@model IEnumerable<Jawlaty.Models.Question>

@{
    ViewData["Title"] = "Manage Questions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <a class="btn btn-success px-4" asp-action="Create">
            <i class="fas fa-plus me-2"></i> Add New Question
        </a>
    </div>

    <!-- Questions Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Question</th>
                    <th class="text-center" style="width: 30%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="table-light">
                            <td>@Html.DisplayFor(modelItem => item.Text)</td>
                            <td class="text-center">
                                <a class="btn btn-primary btn-sm mx-1" asp-action="Edit" asp-route-id="@item.ID">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.ID">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@item.ID">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">No questions available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
