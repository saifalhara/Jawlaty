@model Jawlaty.Models.Question

@{
    ViewData["Title"] = "Create Question";
}

<div class="container my-4 p-4  ">
    <h2 class="mb-4 text-center">Create New Question</h2>
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Text" class="form-label">Question Text</label>
            <input asp-for="Text" class="form-control" placeholder="Enter the question here" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary px-4">Create</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </form>
</div>
